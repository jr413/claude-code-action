# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ai_video_app
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_STANDARD_PRICE_ID=price_standard_plan_id
STRIPE_PREMIUM_PRICE_ID=price_premium_plan_id

# AI API Configuration (Mock in MVP)
RUNWAY_API_KEY=your_runway_api_key
RUNWAY_API_URL=https://api.runwayml.com/v1
VEO3_API_KEY=your_veo3_api_key
VEO3_API_URL=https://api.veo3.com/v1

# AWS Configuration
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=ai-video-app-storage
AWS_S3_REGION=ap-northeast-1
AWS_CLOUDFRONT_DOMAIN=d1234567890.cloudfront.net

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=AI Video App <noreply@aivideoapp.com>

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your-session-secret-change-this

# Age Verification
AGE_VERIFICATION_SERVICE_URL=https://age-verify-service.com/api
AGE_VERIFICATION_API_KEY=your_age_verification_key

# Frontend URL
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Redis (optional for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
CACHE_TTL=3600